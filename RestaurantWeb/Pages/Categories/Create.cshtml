@page
@model RestaurantWeb.Pages.Categories.CreateModel
@{
}
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Create Category</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="category.Name"></label>
            <input asp-for="@Model.category.Name" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="category.DisplayOrder"></label>
            <input asp-for="@Model.category.DisplayOrder" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" width="150px">Create</button>
    </div>
    
</form>