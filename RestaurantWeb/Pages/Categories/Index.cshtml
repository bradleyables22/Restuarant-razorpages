@page
@model RestaurantWeb.Pages.Categories.IndexModel
@{
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6">
            <a asp-page="Create" class="btn btn-primary">
                Create New Category
            </a>
        </div>
    </div>
    <br/>
    <br/>

    <table class="table table-bordered table-striped" width="100%">
        <thead>
            <tr>
                <th>
                    Cat Name
                </th>
                <th>
                    Display Order
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cat in Model.Categories)
            {
                <tr>
                    <td width="50%">@cat.Name</td>
                    <td width="30%">@cat.DisplayOrder</td>
                </tr>
            }
        </tbody>
    </table>
</div>