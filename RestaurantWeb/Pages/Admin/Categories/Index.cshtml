@page
@model RestaurantWeb.Pages.Admin.Categories.IndexModel

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i>&nbsp;Create New Category
            </a>
        </div>
    </div>
    <br/>
    <br/>

    <table class="table table-bordered table-striped align-content-center text-center" width="100%">
        <thead>
            <tr>
                <th>
                    Cat Name
                </th>
                <th>
                    Display Order
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cat in Model.Categories)
            {
                <tr>
                    <td>@cat.Name</td>
                    <td>@cat.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group">
                            <a asp-page="Edit" asp-route-id="@cat.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-page="Delete" asp-route-id="@cat.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>